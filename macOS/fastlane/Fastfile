require_relative "spaceship_patch"

default_platform(:mac)

ENV["FASTLANE_XCODEBUILD_SETTINGS_TIMEOUT"] = "120"

platform :mac do
  lane :package do
    UI.message("Starte Build-Prozess für XToolMac")

    # ❌ KEIN fastlane-plugin-xcodegen
    # ✅ Direktes CLI, vollständig kompatibel mit macOS
    sh(
      "xcodegen",
      "--spec", "/Users/runner/work/xtool/xtool/macOS/project.yml"
    )

    create_keychain(
      name: "xtool.keychain",
      password: "",
      unlock: true
    )

    unlock_keychain(
      path: "xtool.keychain",
      password: ""
    )

    Tempfile.create(["Identity", ".p12"]) do |file|
      file.write(Base64.decode64(ENV["IDENTITY_P12"]))
      file.close

      import_certificate(
        certificate_path: file.path,
        keychain_name: "xtool.keychain",
        keychain_password: ""
      )
    end

    # ⚠️ KEIN update_code_signing_settings
    # Für Developer ID ist das unnötig & fehleranfällig

    gym(
      scheme: "XToolMac",
      export_method: "developer-id",
      output_directory: "./Build/Output"
    )

    notarize(
      package: "./Build/Output/XToolMac.app"
    )

    sh(
      "ditto", "-c", "-k", "--keepParent", "--sequesterRsrc",
      "./Build/Output/XToolMac.app",
      "./Build/Output/XToolMac.app.zip"
    )
  end
end
